{
  "port": 4000,
  "defaultModel": "gpt-5-mini",
  "endpoints": [
    {
      "name": "hello-ai",
      "description": "Return a friendly greeting using an OpenAI prompt.",
      "path": "/ai-greeting",
      "method": "POST",
      "inputSchema": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["greeting"],
        "properties": {
          "greeting": { "type": "string" }
        },
        "additionalProperties": false
      },
      "aiPrompt": {
        "prompt": "Write a JSON object with a single key 'greeting' that greets the provided name in one short sentence.",
        "model": "gpt-5-mini",
        "temperature": 1
      }
    },
    {
      "name": "sum-js",
      "description": "Sum two numbers using a JS handler.",
      "path": "/sum",
      "method": "POST",
      "inputSchema": {
        "type": "object",
        "required": ["a", "b"],
        "properties": {
          "a": { "type": "number" },
          "b": { "type": "number" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["sum"],
        "properties": {
          "sum": { "type": "number" }
        },
        "additionalProperties": false
      },
      "jsHandler": {
        "file": "handlers/sum.js"
      }
    },
    {
      "name": "countries",
      "description": "Return country names for the given continent via an AI prompt.",
      "path": "/countries",
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["continent"],
        "properties": {
          "continent": { "type": "string" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["countries"],
        "properties": {
          "countries": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      },
      "aiPrompt": {
        "prompt": "Return exactly one JSON object with a single key 'countries' whose value is an array of sovereign country names in the specified continent. Do not include any other keys or commentary. Format: {\"countries\": [\"Country 1\", \"Country 2\", ...] }.",
        "model": "gpt-5-mini",
        "temperature": 1
      }
    },
    {
      "name": "translate",
      "path": "/translate", 
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string" }
        },
        "additionalProperties": false
      },
      "description": "Translate the text into Chinese",
      "aiPrompt": {
        "prompt": "Translate the provided text into Chinese. Return only the translated text, nothing else.",
        "model": "gpt-5.2"
      }
    },
    {
      "name": "meetings",
      "description": "Get meetings for a specific day and time using Workiq.",
      "path": "/meetings",
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["day"],
        "properties": {
          "day": { "type": "string" },
          "timeOfDay": { "type": "string" }
        },
        "additionalProperties": false
      },
      "workiqQuery": {
        "query": "What meetings do I have on {{day}} {{timeOfDay}}?"
      }
    },
    {
      "name": "local-joke",
      "description": "Generate a short joke using a local LLM via LM Studio. Returns plain text (no JSON schema) for better compatibility with local models.",
      "path": "/local-joke",
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["topic"],
        "properties": {
          "topic": { "type": "string", "description": "The topic for the joke" }
        },
        "additionalProperties": false
      },
      "aiPrompt": {
        "prompt": "Write a short, family-friendly joke about the provided topic. Return only the joke text, nothing else.",
        "baseUrl": "http://localhost:1234/v1",
        "model": "llama-3.2-3b-instruct",
        "temperature": 0.8
      }
    }
  ]
}
