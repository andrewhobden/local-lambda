{
  "port": 4000,
  "defaultModel": "gpt-5-mini",
  "endpoints": [
    {
      "name": "hello-ai",
      "description": "Return a friendly greeting using an OpenAI prompt.",
      "path": "/ai-greeting",
      "method": "POST",
      "inputSchema": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["greeting"],
        "properties": {
          "greeting": { "type": "string" }
        },
        "additionalProperties": false
      },
      "aiPrompt": {
        "prompt": "Write a JSON object with a single key 'greeting' that greets the provided name in one short sentence.",
        "model": "gpt-5-mini",
        "temperature": 1
      }
    },
    {
      "name": "sum-js",
      "description": "Sum two numbers using a JS handler.",
      "path": "/sum",
      "method": "POST",
      "inputSchema": {
        "type": "object",
        "required": ["a", "b"],
        "properties": {
          "a": { "type": "number" },
          "b": { "type": "number" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["sum"],
        "properties": {
          "sum": { "type": "number" }
        },
        "additionalProperties": false
      },
      "jsHandler": {
        "file": "handlers/sum.js"
      }
    },
    {
      "name": "countries",
      "description": "Return country names for the given continent via an AI prompt.",
      "path": "/countries",
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["continent"],
        "properties": {
          "continent": { "type": "string" }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["countries"],
        "properties": {
          "countries": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      },
      "aiPrompt": {
        "prompt": "Return exactly one JSON object with a single key 'countries' whose value is an array of sovereign country names in the specified continent. Do not include any other keys or commentary. Format: {\"countries\": [\"Country 1\", \"Country 2\", ...] }.",
        "model": "gpt-5-mini",
        "temperature": 1
      }
    },
    {
      "name": "translate",
      "path": "/translate", 
      "method": "GET",
      "inputSchema": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string" }
        },
        "additionalProperties": false
      },
      "description": "Translate the text into Chinese",
      "aiPrompt": {
        "prompt": "Translate the text",
        "model": "gpt-5.2"
      }
    }
  ]
}
